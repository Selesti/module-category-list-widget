<?php
/**
 * Template for displaying category list node
 *
 * @var $block \Magento\Framework\View\Element\Template
 */

if (($node = $block->getNode()) && $node->hasChildren()) {
    $exists = true;
    $level = (int)$block->getLevel();
    $imageAttribute = $this->getData('image_attribute') ?: 'image';
    $columnsCount = (int)$this->getData('columns_count');
    $cssClass = !$level ? ' inline-images columns-' . $columnsCount : '';
    $_imageHelper = $this->helper(\MageKey\CategoryListWidget\Helper\Image::class);
    $image = 'mgk_categorylistwidget_inline_images';
    $mediaAttributes = $_imageHelper->getMediaAttributes($image);
    $imageAttr = [
        'width' => $this->getData('image_width') ?: $mediaAttributes['width'],
        'height' => $this->getData('image_height') ?: $mediaAttributes['height'],
    ];
    $catImageStyle = 'width:' . $imageAttr['width'] . 'px;';
    $catImageStyle .= 'height:' . $imageAttr['height'] . 'px;';
}
?>
<?php if (isset($exists)) : ?>
    <?php if (!$level) : ?>
    <ul class="items<?= /* @escapeNotVerified */ $cssClass ?>">
    <?php endif; ?>
        <?php foreach ($node->getChildren() as $child) : ?>
        <li class="item">
            <a class="cat-item" href="<?= /* @escapeNotVerified */ $child->getUrl() ?>">
                <div class="cat-image" style="<?= /* @escapeNotVerified */ $catImageStyle ?>">
                    <img alt="<?= /* @escapeNotVerified */ $child->getName() ?>"
                        src="<?= /* @escapeNotVerified */ $_imageHelper->getImage('catalog/category/' . $child->getData($imageAttribute), $image, $imageAttr) ?>" />
                </div>
                <div class="cat-name"><?= /* @escapeNotVerified */ $child->getName() ?></div>
            </a>
        </li>
            <?= /* @escapeNotVerified */ $block->setNode($child)->setLevel($level + 1)->toHtml() ?>
        <?php endforeach; ?>
    <?php if (!$level) : ?>
    </ul>
    <?php endif; ?>
<?php endif; ?>
